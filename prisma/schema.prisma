generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Clientes {
  id               Int                @id @default(autoincrement())
  nombre           String
  punto            String
  censos           Censo_clientes[]
  Precios_bombonas Precios_bombonas[]
}

model Precios_bombonas {
  id         Int      @id @default(autoincrement())
  cliente    Clientes @relation(fields: [fk_cliente], references: [id])
  fk_cliente Int
  kg10       Int
  kg18       Int
  kg27       Int
  kg43       Int
}

model Censo_clientes {
  id           Int            @id @default(autoincrement())
  fecha        DateTime
  fk_cliente   Int
  cant_5kg     Int
  cant_10kg    Int
  cant_18kg    Int
  cant_27kg    Int
  cant_43kg    Int
  cliente      Clientes       @relation(fields: [fk_cliente], references: [id])
  devoluciones Devoluciones[]
}

model Devoluciones {
  id       Int            @id @default(autoincrement())
  fecha    DateTime
  cantidad Int
  Kg       Int
  fk_censo Int
  censo    Censo_clientes @relation(fields: [fk_censo], references: [id])
}

model Facturas_corigas {
  id               Int                     @id @default(autoincrement())
  fecha            DateTime
  monto_en_divisas Int
  cant_5kg         Int
  cant_10kg        Int
  cant_18kg        Int
  cant_27kg        Int
  cant_43kg        Int
  pagos_corigas    Pagos_factura_corigas[]
}

model Pagos_factura_corigas {
  id                 Int              @id @default(autoincrement())
  fk_factura_corigas Int
  monto_Pagado       Int
  dolarBcv           Int
  factura_corigas    Facturas_corigas @relation(fields: [fk_factura_corigas], references: [id])
}

model Pagos_clientes {
  id               Int      @id @default(autoincrement())
  facturas_censoId Int
  total_divisa     Int
  dolarBcv         Int
  monto_pagado     Int
  fecha_pago       DateTime
}

model Gastos_empresa {
  id          Int      @id @default(autoincrement())
  descripcion String
  fecha       DateTime
  monto       Int
}

model Gastos_fijos {
  id          Int    @id @default(autoincrement())
  descripcion String
  monto       Int
}
